
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to create, read, and update their own profile document.
      allow read, create, update: if request.auth.uid == userId;

      // Allow users to manage (read, write, delete) their own saved destinations.
      match /savedDestinations/{destinationId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }
  }
}
